{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
<h1 class="my-3">Les annonces de nos hotes</h1>
<div class="row">
    {% for ad in ads %}
        {% set url = path('ads_show', {'slug': ad.slug}) %}
        <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-header text-center">
                    {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong><br>
                    <small>Pas encore not√©</small>
                </div>
                <a href="{{ url }}">
                    <img src="{{ ad.coverImage }}" alt="Image {{ ad.title }}" style="height: 200px; width: 100%; display: block;">
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        {{ ad.title }}
                    </h4>
                    <p class="card-text">
                        {{ ad.introduction }}
                    </p>
                    <a href="{{ url }}" class="btn btn-secondary">Voir plus</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
